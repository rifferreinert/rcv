{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:{your-server}.database.windows.net,1433;Initial Catalog={your-database};Persist Security Info=False;User ID={your-username};Password={your-password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "{REPLACE_IN_PRODUCTION}",
      "Issuer": "RcvWebApi",
      "Audience": "RcvWebApp",
      "ExpirationDays": 7
    },
    "Slack": {
      "ClientId": "{REPLACE_WITH_SLACK_CLIENT_ID}",
      "ClientSecret": "{REPLACE_WITH_SLACK_CLIENT_SECRET}",
      "CallbackPath": "/api/auth/callback/slack"
    },
    "Microsoft": {
      "ClientId": "{REPLACE_WITH_MICROSOFT_CLIENT_ID}",
      "ClientSecret": "{REPLACE_WITH_MICROSOFT_CLIENT_SECRET}",
      "CallbackPath": "/api/auth/callback/microsoft"
    },
    "Google": {
      "ClientId": "{REPLACE_WITH_GOOGLE_CLIENT_ID}",
      "ClientSecret": "{REPLACE_WITH_GOOGLE_CLIENT_SECRET}",
      "CallbackPath": "/api/auth/callback/google"
    },
    "Apple": {
      "ClientId": "{REPLACE_WITH_APPLE_CLIENT_ID}",
      "ClientSecret": "{REPLACE_WITH_APPLE_CLIENT_SECRET}",
      "CallbackPath": "/api/auth/callback/apple"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000"
    ]
  }
}
